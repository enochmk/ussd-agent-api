		"morgan": "^1.10.0",
		"mssql": "^7.3.5",
		"redis": "^3.1.2",
		"typeorm": "^0.3.6",
		"uuid": "^8.3.2",
		"winston": "^3.3.3"
	},
	"devDependencies": {
